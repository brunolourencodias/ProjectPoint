
@{
    ViewData["Title"] = "Painel";
}
<style type="text/css">
    #CardMarcation {
        width: 100%;
        height: 15rem;
    }

    #CardVacation {
        width: 100%;
        height: 15rem;
    }

    #Cardemployee {
        width: 100%;
        height: 15rem;
    }

    .card {
        margin-top: 12%;
    }

    .linebar {
        width: 100%;
        border: 0.50px solid;
    }
    .btn-dark {
        background-color: #384452;
        font: bold 18px sans-serif;
    }
    .btn-dark:hover {
        background-color: #00b3fe;
        color: #384452 !important;
        font: bold 18px sans-serif;
    }
</style>
<div class="card">
    <div class="card-body">
        <label style="width:100%; font-family:sans-serif; font-size: 20px">Painel</label>
        <div class="linebar"></div>
        <div class="row">
            <div class="col-md-2">
                <div class="card" id="CardMarcation">
                    <div class="card-body">
                        <div class="row">
                            <img id="ImgIconMarcation" src="~/Icones/check.png"/>
                            <button type="button" class="btn btn-dark" onclick=" location.href='@Url.Action("Marcation")'">Marcações</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card" id="CardVacation">
                    <div class="card-body">
                        <img id="ImgIconVacation" src="~/Icones/palm-tree.png"/>
                        @*<button type="button" class="btn btn-dark" asp-controller="Employee" asp-action="Employee">Colaborador</button>*@
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card" id="Cardemployee">
                    <div class="card-body">
                        <img id="ImgIconEployee" src="~/Icones/contacts.png"/>
                        <button type="button" id="btnEmployee" class="btn btn-dark" onclick=" location.href='@Url.Action("Service/Employee")'">Colaboradores</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


